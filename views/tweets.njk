{% extends "base.njk" %}
{% block title %}
{{ title }}
{% endblock %}

{% block content %}
<div class="row">
  <ul class="media-list">
    {% for tweet in tweets %}
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
      <li class="media">
        <a href="#" class="pull-left">
          <img src="{{tweet.user.profile_image_url_https}}" alt="a" class="img-circle">
        </a>
      <div class="media-body">
          <span class="text-muted pull-right">
              <small class="text-muted">30 min ago</small>
          </span>
          <strong class="text-success">@{{tweet.user.screen_name}}</strong>
          <p>
              {{tweet.text}}
          </p>
      </div>
    </li>
  </div>
  {% endfor %}
  </ul>
</div>
{% endblock %}
